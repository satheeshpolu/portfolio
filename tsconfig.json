{
   "compilerOptions": {
     "module": "ESNext",      // Keeps ES module imports/exports
     "target": "ES6",         // Compiles to modern JavaScript
     "esModuleInterop": true, // Ensures compatibility with CommonJS modules
     "outDir": "./dist",      // Where compiled JS files go
     "rootDir": "./src",      // Source folder for TypeScript files
     "moduleResolution": "node", // Resolves modules in a Node.js way
     "strict": true           // Enables strict type-checking
   },
   "include": ["src/**/*.ts"], // Path to your TypeScript files
   "exclude": ["node_modules"]
 }
 